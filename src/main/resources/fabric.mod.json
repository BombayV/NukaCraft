{
	"schemaVersion": 1,
	"id": "nukacraft",
	"version": "${version}",
	"name": "NukaCraft",
	"description": "A Fallout 4/76 inspired mod that focuses on creating a more immersive gameplay with Nuka-Cola drinks, weapons, enemies, and more.",
	"authors": [
		"BombayV",
		"dante.alex"
	],
	"contact": {
		"homepage": "https://nukacraft.pages.dev/",
		"sources": "https://github.com/BombayV/NukaCraft"
	},
	"license": "AGPL-3.0",
	"icon": "assets/nukacraft/NukaIcon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "org.entityevolution.Nukacraft",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "org.entityevolution.NukacraftClient",
				"adapter": "kotlin"
			}
		],
		"fabric-datagen": [
			{
				"value": "org.entityevolution.NukacraftDataGenerator",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"nukacraft.mixins.json",
		{
			"config": "nukacraft.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.21",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": ">=1.8.22"
	},
	"suggests": {
		"another-mod": "*"
	}
}